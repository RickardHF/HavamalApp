<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Havamal.Views.Shop"
             xmlns:resources="clr-namespace:Havamal.Resources.TextResources"
             BackgroundColor="{DynamicResource PageBackgroundColor}">
    <ContentPage.Content>
        <AbsoluteLayout>
            <Button 
                Text="{Static resources:AppResources.WebLinkShop}"
                Clicked="OpenShop"
                Style="{DynamicResource ShopBtn}"
                AbsoluteLayout.LayoutBounds="0.5,0.5"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                    />
        </AbsoluteLayout>
        <!--<WebView x:Name="webView" Source="https://norse-wisdom-shop.creator-spring.com"/>-->
    </ContentPage.Content>
</ContentPage>