<?xml version="1.0" encoding="utf-8" ?>
<Frame xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Havamal.Views.Components.ThemeButton"
             Style="{DynamicResource LangButtonFrame}">
    <StackLayout Orientation="Horizontal">
        <StackLayout.GestureRecognizers>
            <TapGestureRecognizer Tapped="OnButtonClicked"/>
        </StackLayout.GestureRecognizers>
        <Image x:Name="ButtonImage" Style="{DynamicResource SmallImg}"></Image>
        <StackLayout Orientation="Vertical" Spacing="0" VerticalOptions="CenterAndExpand">
            <Label x:Name="ButtonTitle" Style="{DynamicResource LangButtonMain}"></Label>
        </StackLayout>
    </StackLayout>
</Frame>