<?xml version="1.0" encoding="utf-8" ?>
<StackLayout xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Havamal.Views.Components.LanguageButton"
             Orientation="Horizontal">
    <StackLayout.GestureRecognizers>
        <TapGestureRecognizer Tapped="OnButtonClicked">
        </TapGestureRecognizer>
    </StackLayout.GestureRecognizers>
    <Image x:Name="ButtonImage" WidthRequest="30"></Image>
    <StackLayout Orientation="Vertical" Spacing="0">
        <Label x:Name="ButtonTitle" FontSize="Subtitle" FontAttributes="Bold"></Label>
        <Label x:Name="ButtonDesctiption" FontSize="Small"></Label>
    </StackLayout>
</StackLayout>
    