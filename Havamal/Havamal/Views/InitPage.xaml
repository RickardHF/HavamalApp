<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Havamal.Views.InitPage"
             BackgroundColor="{DynamicResource Key=InitBackGround}">
    <ContentPage.Content>
        <AbsoluteLayout>
            <Image 
                AbsoluteLayout.LayoutBounds="0.5,0.4"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                VerticalOptions="Center" 
                Style="{DynamicResource BigImg}" 
                Source="odelwhite.png"/>
            <Label 
                x:Name="InfoText" 
                AbsoluteLayout.LayoutBounds="0.5,0.75"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                Style="{DynamicResource InfoStartup}"/>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>