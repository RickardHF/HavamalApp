<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:Havamal.ViewModels"
             x:Class="Havamal.Views.StanzaListPage"
             BackgroundColor="{DynamicResource PageBackgroundColor}">
    <Frame BackgroundColor="{DynamicResource PageBackgroundColor}">
        <CarouselView 
            x:Name="Carousel"
            >
            <CarouselView.ItemTemplate>
                <DataTemplate>
                    <StackLayout
                        VerticalOptions="CenterAndExpand">
                        <Label  
                            Text="{Binding VerseId}" 
                            Style="{DynamicResource VerseIdText}"/>
                        <Label
                            Style="{DynamicResource VerseText}"
                            Text="{Binding Content}"/>
                    </StackLayout>
                </DataTemplate>
            </CarouselView.ItemTemplate>
        </CarouselView>
    </Frame>
</ContentPage>
